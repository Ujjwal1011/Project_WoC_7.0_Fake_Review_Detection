{
  "manifest_version": 3,
  "name": "Amazon Review Analyzer",
  "version": "1.2.1",
  "description": "Analyzes Amazon reviews for authenticity.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://www.amazon.in/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}